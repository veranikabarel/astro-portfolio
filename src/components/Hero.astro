---
import heroImage from '@assets/images/hero.png';
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';
---

<section
	data-testid="hero"
	class="flex flex-col-reverse items-center justify-center text-center lg:mb-8 lg:mt-8 lg:flex-row"
>
	<div class="flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hi! My name is <span class="text-orange">Abdallah Shaban</span> and I am a Product Manager based
				in San Diego,CA.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class={'flex'} name="learn more">Learn more</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="Coding girl"
			format="png"
			width={600}
			height={600}
			loading="eager"
		/>
	</div>
</section>
